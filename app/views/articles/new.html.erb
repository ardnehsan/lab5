<h1>New Hero</h1>

<div class="fixer">
<%=form_for @article do |h| %>

<div class = "form-group <%='has-error' if @article.errors[:title].any? %>">
  <%= h.label :title, class: 'control-label'%>
  <%= h.text_field :title%>
  <%= h.label :USER%>
  <%= h.text_field :name%>
</div>
<br></br>
<div>
  <%= h.label :post%>
  <%= h.text_area :post%>
</div>
<div class= "form-group">
  <%= h.label :link_a_photo%>
  <%= h.url_field :photo_url, class: 'form-control'%>
</div>



<div>
  <%= h.submit 'Create Candidate', class: 'btn btn-primary btn-lg'%>
</div>

<%end%>
</div>
